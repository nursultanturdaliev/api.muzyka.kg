{% extends "::base.html.twig" %}

{% block title %}AppBundle:Song:list{% endblock %}

{% block body %}
    <ul>
        {% for entity in entities %}
            <li>
                <audio src="/{{ entity.path }}" loop controls style="width: 100%; background-color: #085196">{{ entity.artist }} - {{ entity.title }}</audio>
            </li>
        {% endfor %}
    </ul>
    <div class="pagination">
        {{ knp_pagination_render(entities) }}
    </div>
{% endblock %}
